<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Detail.EurojackpotPage"
             xmlns:Ad="clr-namespace:App2.AdMob;assembly=App2"
             BackgroundColor="White"
             Title="Eurojackpot - Detail">
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="600" />
                </Grid.RowDefinitions>
                <Image Source="eurojackpot.png" Aspect="AspectFit" WidthRequest="150" HorizontalOptions="Center" Margin="0, 10, 0, 0" Grid.Row="0"/>
                <WebView Source="http://achrafchikoun.com/deutsch/lotto_deutsch_detail/eurojackpot.html" Margin="5, 0, 5, 0" Grid.Row="1"/>
            </Grid>
        </ScrollView>

        <!-- AdMob banner START -->
        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="Center">
            <Ad:AdBanner Size="SmartBannerPortrait" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
        <!-- AdMob banner END -->
    </StackLayout>
</ContentPage>